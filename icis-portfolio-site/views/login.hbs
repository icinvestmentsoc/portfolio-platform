<html>
    <head>
        <script src="/jquery-3.1.1.min.js"></script>
    </head>
    <body>
        <input id="username" type="text" name="username" placeholder="username">
        <input id="password" type="text" name="pass" placeholder="pass">

        <button id="login">Login</button>

        <script>
            $("#login").click((err, el) => {
                
                $("#login").html("Clikc");

                var user = $("#username").val();
                var pass = $("#password").val();

                $.post("../userLogin", {"user": user, "pass": pass}, (data) => {
                    console.log(data);
                })
            });
        </script>
    </body>
</html>